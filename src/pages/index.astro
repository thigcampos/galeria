---
import '../../public/css/pages/index.css'
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Galeria">
	<main>
		<h1 class="heading__title">Galeria by <span>Campos</span></h1>
		<p class="heading__subtitle">
			To get started, open the directory <code>src/pages</code> in your project.
		</p>
		<ul role="list" class="link-card-grid" style="padding-left: 0;">
			<Card
				href="https://imagens.thigcampos.com/0051-AEROCOLOR100-2.jpg"
				title="Documentation"
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Integrations"
			/>
			<Card
				href="https://astro.build/themes/"
				title="Themes"
			/>
			<Card
				href="https://astro.build/chat/"
				title="Community"
			/>
		</ul>
	</main>
</Layout>